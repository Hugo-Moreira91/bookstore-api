generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id          Int       @id @default(autoincrement())
  name        String
  birthdate   DateTime? @db.Date
  nationality String?
  books       Book[]

  @@map("authors")
}

model Book {
  id               Int         @id @default(autoincrement())
  title            String
  publication_year Int
  language         String
  price            Decimal     @db.Decimal(10, 2)
  author_id        Int?
  category_id      Int?
  authors          Author?    @relation(fields: [author_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  categories       Category? @relation(fields: [category_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([title, author_id])
  @@map("books")
}

model Category {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  books Book[]

  @@map("categories")
}
